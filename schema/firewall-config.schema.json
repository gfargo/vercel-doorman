{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Doorman Config",
  "description": "Schema for vercel-doorman project configuration files",
  "$ref": "#/definitions/FirewallConfig",
  "definitions": {
    "FirewallConfig": {
      "$ref": "#/definitions/VercelFirewallConfig"
    },
    "VercelFirewallConfig": {
      "type": "object",
      "properties": {
        "projectId": {
          "type": "string"
        },
        "teamId": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "firewallEnabled": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VercelCustomRule"
          }
        },
        "ips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VercelIPBlockingRule"
          }
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": ["rules"],
      "additionalProperties": false,
      "description": "Vercel firewall configuration"
    },
    "VercelCustomRule": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "conditionGroup": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VercelConditionGroup"
          }
        },
        "action": {
          "$ref": "#/definitions/VercelRuleAction"
        },
        "active": {
          "type": "boolean"
        }
      },
      "required": ["name", "conditionGroup", "action", "active"],
      "additionalProperties": false,
      "description": "Vercel custom rule"
    },
    "VercelConditionGroup": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VercelRuleCondition"
          }
        }
      },
      "required": ["conditions"],
      "additionalProperties": false,
      "description": "Vercel condition group (AND conditions)"
    },
    "VercelRuleCondition": {
      "type": "object",
      "properties": {
        "op": {
          "$ref": "#/definitions/VercelRuleOperator"
        },
        "neg": {
          "type": "boolean"
        },
        "type": {
          "$ref": "#/definitions/VercelRuleType"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "number"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          ]
        }
      },
      "required": ["op", "type"],
      "additionalProperties": false,
      "description": "Vercel rule condition"
    },
    "VercelRuleOperator": {
      "type": "string",
      "enum": ["eq", "pre", "suf", "inc", "sub", "re", "ex", "nex"],
      "description": "Vercel rule operators"
    },
    "VercelRuleType": {
      "type": "string",
      "enum": [
        "host",
        "path",
        "method",
        "header",
        "query",
        "cookie",
        "target_path",
        "ip_address",
        "region",
        "protocol",
        "scheme",
        "environment",
        "user_agent",
        "geo_continent",
        "geo_country",
        "geo_country_region",
        "geo_city",
        "geo_as_number",
        "ja4_digest",
        "ja3_digest",
        "rate_limit_api_id"
      ],
      "description": "Vercel condition types"
    },
    "VercelRuleAction": {
      "type": "object",
      "properties": {
        "mitigate": {
          "$ref": "#/definitions/VercelMitigationAction"
        }
      },
      "required": ["mitigate"],
      "additionalProperties": false,
      "description": "Vercel rule action"
    },
    "VercelMitigationAction": {
      "type": "object",
      "properties": {
        "action": {
          "$ref": "#/definitions/ActionType"
        },
        "rateLimit": {
          "anyOf": [
            {
              "$ref": "#/definitions/VercelRateLimit"
            },
            {
              "type": "null"
            }
          ]
        },
        "redirect": {
          "anyOf": [
            {
              "$ref": "#/definitions/VercelRedirect"
            },
            {
              "type": "null"
            }
          ]
        },
        "actionDuration": {
          "type": ["string", "null"]
        }
      },
      "required": ["action"],
      "additionalProperties": false,
      "description": "Vercel mitigation action"
    },
    "ActionType": {
      "type": "string",
      "enum": ["log", "deny", "challenge", "bypass", "rate_limit", "redirect", "allow", "block"],
      "description": "Action types supported across providers"
    },
    "VercelRateLimit": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "number"
        },
        "window": {
          "type": "string"
        },
        "characteristics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mitigationTimeout": {
          "type": "number"
        },
        "countingExpression": {
          "type": "string"
        }
      },
      "required": ["requests", "window"],
      "additionalProperties": false,
      "description": "Vercel rate limit configuration"
    },
    "VercelRedirect": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string"
        },
        "permanent": {
          "type": "boolean"
        }
      },
      "required": ["location"],
      "additionalProperties": false,
      "description": "Vercel redirect configuration"
    },
    "VercelIPBlockingRule": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "ip": {
          "type": "string"
        },
        "hostname": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "const": "deny"
        }
      },
      "required": ["ip", "hostname", "action"],
      "additionalProperties": false,
      "description": "Vercel IP blocking rule"
    }
  }
}
