{
  "rules": [
    {
      "name": "Protect Sensitive Paths",
      "description": "Block access to sensitive paths",
      "conditionGroup": [
        {
          "conditions": [
            {
              "type": "path",
              "op": "pre",
              "value": "/.env"
            },
            {
              "type": "path",
              "op": "pre",
              "value": "/.git/*"
            },
            {
              "type": "path",
              "op": "pre",
              "value": "/wp-admin/*"
            },
            {
              "type": "path",
              "op": "pre",
              "value": "/phpMyAdmin/*"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny"
        }
      },
      "active": true
    },
    {
      "name": "API Documentation Access",
      "description": "Restrict access to API docs",
      "conditionGroup": [
        {
          "conditions": [
            {
              "op": "pre",
              "type": "path",
              "value": "/docs/api"
            },
            {
              "op": "nex",
              "type": "header",
              "key": "x-api-key"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny",
          "redirect": {
            "location": "/docs/login",
            "permanent": false
          }
        }
      },
      "active": true
    },
    {
      "name": "Development Endpoints",
      "description": "Protect development-only endpoints",
      "conditionGroup": [
        {
          "conditions": [
            {
              "op": "pre",
              "type": "path",
              "value": "/__debug"
            }
          ]
        },
        {
          "conditions": [
            {
              "op": "pre",
              "type": "path",
              "value": "/dev-"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "challenge",
          "actionDuration": "15m"
        }
      },
      "active": true
    }
  ]
}
