{
  "rules": [
    {
      "name": "API Rate Limit",
      "description": "Rate limit API endpoints",
      "conditionGroup": [
        {
          "conditions": [
            {
              "type": "path",
              "op": "pre",
              "value": "/api/*"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny",
          "rateLimit": {
            "requests": 100,
            "window": "1m"
          }
        }
      },
      "active": true
    },
    {
      "name": "Login Rate Limit",
      "description": "Protect login endpoint from brute force",
      "conditionGroup": [
        {
          "conditions": [
            {
              "op": "eq",
              "type": "path",
              "value": "/auth/login"
            },
            {
              "op": "eq",
              "type": "method",
              "value": "POST"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "challenge",
          "rateLimit": {
            "requests": 5,
            "window": "5m"
          },
          "actionDuration": "30m"
        }
      },
      "active": true
    }
  ]
}
