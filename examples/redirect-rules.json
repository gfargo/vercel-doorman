{
  "rules": [
    {
      "name": "Legacy Path Redirect",
      "description": "Redirect old paths to new ones",
      "conditionGroup": [
        {
          "conditions": [
            {
              "type": "path",
              "op": "pre",
              "value": "/old-blog/*"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny",
          "redirect": {
            "location": "/blog/",
            "permanent": true
          }
        }
      },
      "active": true
    },
    {
      "name": "Maintenance Redirect",
      "description": "Redirect during maintenance",
      "conditionGroup": [
        {
          "conditions": [
            {
              "op": "pre",
              "type": "path",
              "value": "/api/"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny",
          "redirect": {
            "location": "/maintenance.html",
            "permanent": false
          },
          "actionDuration": "2h"
        }
      },
      "active": true
    }
  ]
}
