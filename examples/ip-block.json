{
  "rules": [
    {
      "name": "Block Single IP",
      "description": "Block a specific IP address",
      "conditionGroup": [
        {
          "conditions": [
            {
              "type": "ip_address",
              "op": "eq",
              "value": "192.168.1.1"
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny"
        }
      },
      "active": true
    },
    {
      "name": "Block IP Range",
      "description": "Block an IP range using CIDR notation",
      "conditionGroup": [
        {
          "conditions": [
            {
              "type": "ip_address",
              "op": "inc",
              "value": ["10.0.0.0/24"]
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "deny",
          "actionDuration": "24h"
        }
      },
      "active": true
    },
    {
      "name": "Allow Trusted IPs",
      "description": "Allow specific IPs with custom condition group",
      "conditionGroup": [
        {
          "conditions": [
            {
              "op": "inc",
              "type": "ip_address",
              "value": ["172.16.0.0/16"]
            }
          ]
        }
      ],
      "action": {
        "mitigate": {
          "action": "bypass"
        }
      },
      "active": true
    }
  ]
}
